<Page
    x:Class="PROG6212POE.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PROG6212POE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomePage"
    d:DesignHeight="525"
    d:DesignWidth="720"
    FontFamily="/Fonts/#Poppins"
    Foreground="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="120"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>


        <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            Content="Welcome to your Study Planner!"
            FontSize="32" />
        <Label
            Grid.Row="2"
            HorizontalAlignment="Center"
            Content="If you're new please  look to the left to add a module"
            FontSize="24" />
        <Label
            Grid.Row="3"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            Content="If not then please select a module on the left&#x0a;              to view your module details"
            FontSize="24" />

    </Grid>
</Page>
