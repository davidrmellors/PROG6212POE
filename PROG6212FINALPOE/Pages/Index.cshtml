@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="container">
        <!-- Hero Section -->
        <section class="section">
            <div class="row">
                <div class="col s12 center">
                    <h1>Welcome to StudyPlanner!</h1>
                    <p class="flow-text">Your personal guide to structured studying.</p>
                </div>
            </div>
        </section>

        <!-- How to Use Section -->
        <section class="section">
            <h2 class="center">Getting Started</h2>
            <div class="row">
                <div class="col s12 m4">
                    <div class="icon-block">
                        <h3 class="center light-blue-text"><i class="material-icons">group</i></h3>
                        <h5 class="center">Register or Login</h5>
                        <p class="light center">Create your personal account to track your study progress.</p>
                        <div class="center">
                            <a href="@Url.Page("/Register/Index")" class="waves-effect waves-light btn">Register</a>
                            <a href="@Url.Page("/Login/Index")" class="waves-effect waves-light btn">Log in</a>
                        </div>
                    </div>
                </div>

                <div class="col s12 m4">
                    <div class="icon-block">
                        <h3 class="center light-blue-text"><i class="material-icons">book</i></h3>
                        <h5 class="center">Add Modules</h5>
                        <p class="light center">Add your study modules with details like credits, class hours, and start date.</p>
                    </div>
                </div>

                <div class="col s12 m4">
                    <div class="icon-block">
                        <h3 class="center light-blue-text"><i class="material-icons">schedule</i></h3>
                        <h5 class="center">Plan Your Study</h5>
                        <p class="light center">Allocate specific days for each module and track your study hours.</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>
